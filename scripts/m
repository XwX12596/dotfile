#!/bin/bash
if [[ $# == 0 ]]; then
  echo Nothing Input!
  exit
fi

state=`sudo envycontrol -q`
cmd='mpv'
opt=''

while [ $# != 0 ]; do
  add="$1"
  if [[ `echo $add | grep " "` != '' ]]
  then
    add="'""$add""'"
  fi
  opt="$opt ""$add"
  shift
done

if [[ $state == 'integrated' || -a /etc/modprobe.d/vfio.conf ]]; then
  cmd="$cmd ""--profile=intel""$opt"
else
  cmd="$cmd ""$opt"
fi

echo exec "$cmd" | sh
